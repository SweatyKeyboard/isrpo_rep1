<Window x:Class="ISRPO_Lab9C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISRPO_Lab9C"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="792">
            <Button Content="Copy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="38" Command="ApplicationCommands.Copy"/>
            <Button Content="Paste" Height="40" VerticalAlignment="Top" Width="75" Command="ApplicationCommands.Paste"/>
            <Button Content="Cut" Height="40" VerticalAlignment="Top" Width="75" Click="Button_Click" Command="ApplicationCommands.Cut"/>
        </ToolBar>
        <RichTextBox HorizontalAlignment="Left" Height="359" Margin="10,50,0,0" VerticalAlignment="Top" Width="772">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
