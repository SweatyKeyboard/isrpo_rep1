<Window x:Class="ISRPO_Lab8A.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISRPO_Lab8A"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBarTray Orientation="Vertical">
        <ToolBar HorizontalAlignment="Left"  VerticalAlignment="Top" Height="420" Width="100">
            <Button x:Name="butBold" Content="Bold" Width="58" Click="ButBold_Click" Height="29"/>
            <Button x:Name="butItalic" Content="Italic" Width="50"  Click="ButItalic_Click"/>
            <Slider x:Name="slidSize" Width="80" Maximum="40" ValueChanged="SlidSize_ValueChanged"/>
        </ToolBar>
        </ToolBarTray>
        <RichTextBox x:Name="rtb" HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="500">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ListBox x:Name="lbFonts" HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="195" SelectionChanged="LbFonts_SelectionChanged"/>


    </DockPanel>
</Window>
